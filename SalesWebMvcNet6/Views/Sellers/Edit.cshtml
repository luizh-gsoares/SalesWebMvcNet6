@model SalesWebMvcNet6.Models.ViewModels.SellerFormViewModel
@{ ViewData["Title"] = "Edit";
}

<h2 class="py-3">@ViewData["Title"]</h2>

<!-- /.login-logo -->
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="Seller.Id" type="hidden" required />
            <div class="form-group py-3">
                <label asp-for="Seller.Name" class="control-label"></label>
                <input asp-for="Seller.Name" class="form-control" required />
            </div>
            <div class="form-group py-3">
                <label asp-for="Seller.Email" class="control-label"></label>
                <input asp-for="Seller.Email" class="form-control" required />
            </div>
            <div class="form-group py-3">
                <label asp-for="Seller.BirthDate" class="control-label"></label>
                <input asp-for="Seller.BirthDate" class="form-control" required />
            </div>
            <div class="form-group py-3">
                <label asp-for="Seller.BaseSalary" class="control-label"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" required />
            </div>
            <div class="form-group py-3">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control" required>
                    <option selected disabled>Select an Option</option>
                </select>
            </div>
            <div class="form-group py-3">
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }